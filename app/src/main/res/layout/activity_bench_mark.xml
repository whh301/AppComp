<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bench_mark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.spirent.landslide.datagen.BenchMark">

    <TextView
        android:text="Target URL:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txtReqUri" />

    <EditText
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="10.61.64.101"
        android:ems="8"
        android:layout_alignBaseline="@+id/txtReqUri"
        android:layout_alignBottom="@+id/txtReqUri"
        android:layout_centerHorizontal="true"
        android:id="@+id/httpTarget" />

    <TextView
        android:text="Total Bytes Received:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtReqUri"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/totalBytesRcved" />

    <TextView
        android:text="HTTP Bench Mark:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_below="@+id/totalBytesRcved"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="HTTP BENCHMARK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/btnHttp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@android:style/Widget.Button" />

    <TextView
        android:text="Target Ip:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHttp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:id="@+id/lblTarget" />

    <EditText
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="10.61.64.101"
        android:ems="8"
        android:layout_alignBaseline="@+id/lblTarget"
        android:layout_alignBottom="@+id/lblTarget"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtTarget" />

    <TextView
        android:text="Packets Sent:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/packetsSent"
        android:layout_below="@+id/lblTarget"
        android:layout_marginTop="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Packets Received:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/packetsRcvd"
        android:layout_below="@+id/packetsSent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Bytes Sent:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packetsRcvd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bytesSent" />

    <TextView
        android:text="Bytes Received:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packetsRcvd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/bytesRcvd" />

    <TextView
        android:text="UDP Bench Mark:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bytesRcvd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/udpBps" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalBytesRcved"
        android:layout_toRightOf="@+id/btnUdp"
        android:layout_toEndOf="@+id/btnUdp"
        android:id="@+id/httpBytesRcved" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/httpBytesRcved"
        android:layout_alignLeft="@+id/httpBytesRcved"
        android:layout_alignStart="@+id/httpBytesRcved"
        android:id="@+id/txtHttpBps" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/packetsRcvd"
        android:layout_alignLeft="@+id/txtHttpBps"
        android:layout_alignStart="@+id/txtHttpBps"
        android:id="@+id/txtPksSent" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPksSent"
        android:layout_alignLeft="@+id/txtPksSent"
        android:layout_alignStart="@+id/txtPksSent"
        android:id="@+id/txtPksRcvd" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPksRcvd"
        android:layout_alignLeft="@+id/txtPksRcvd"
        android:layout_alignStart="@+id/txtPksRcvd"
        android:id="@+id/txtUdpSent" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUdpSent"
        android:layout_alignLeft="@+id/txtUdpSent"
        android:layout_alignStart="@+id/txtUdpSent"
        android:id="@+id/udpRcvd" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/udpRcvd"
        android:layout_alignLeft="@+id/udpRcvd"
        android:layout_alignStart="@+id/udpRcvd"
        android:id="@+id/udpMark" />

    <Button
        android:text="UDP BENCHMARK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUdp"
        android:layout_marginBottom="18dp"
        style="@android:style/Widget.Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="         Passive         "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPassive"
        style="@android:style/Widget.Button"
        android:layout_alignBaseline="@+id/btnUdp"
        android:layout_alignBottom="@+id/btnUdp"
        android:layout_toRightOf="@+id/btnUdp"
        android:layout_toEndOf="@+id/btnUdp" />

</RelativeLayout>
